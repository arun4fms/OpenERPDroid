<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout
android:id="@+id/widget0"
android:layout_width="fill_parent"
android:layout_height="fill_parent"
xmlns:android="http://schemas.android.com/apk/res/android"
>
<TextView
android:id="@+id/user_tv"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="@string/username"
android:textStyle="italic"
android:layout_x="10px"
android:layout_y="90px"
>
</TextView>
<EditText
android:id="@+id/user_txt"
android:layout_width="fill_parent"
android:layout_height="wrap_content"
android:textSize="18sp"
android:layout_x="0px"
android:layout_y="119px"
>
</EditText>
<EditText
android:id="@+id/pass_txt"
android:layout_width="fill_parent"
android:layout_height="wrap_content"
android:textSize="18sp"
android:password="true"
android:layout_x="0px"
android:layout_y="203px"
>
</EditText>
<TextView
android:id="@+id/pass_tv"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="@string/password"
android:textStyle="italic"
android:layout_x="4px"
android:layout_y="179px"
>
</TextView>
<Button
android:id="@+id/login_button"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="@string/login_button"
android:layout_x="77px"
android:layout_y="352px"
>
</Button>
<TextView
android:id="@+id/db_tv"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="@string/db_tv"
android:textStyle="italic"
android:layout_x="0px"
android:layout_y="260px"
>
</TextView>
<Spinner
android:id="@+id/db_spinner"
android:layout_width="fill_parent"
android:layout_height="wrap_content"
android:layout_x="0px"
android:layout_y="285px"
>
</Spinner>
</AbsoluteLayout>
